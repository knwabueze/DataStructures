<UserControl x:Class="FractalDrawing.Visualizations.LinkedList.NodeRepresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FractalDrawing.Visualizations.LinkedList"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Ellipse VerticalAlignment="Center" HorizontalAlignment="Center" Width="40" Height="40" Fill="LightGray" Stroke="Black" StrokeThickness="3"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"  Text="{Binding Value}" FontSize="20"  Foreground="Black"/>
    </Grid>
</UserControl>
